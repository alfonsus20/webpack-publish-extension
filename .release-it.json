{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "public/manifest.json",
      "out": "public/manifest.json"
    },
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md"
    }
  },
  "npm": false
}
